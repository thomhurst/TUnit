<Project>
  <!-- Example MSBuild properties for TUnit configuration -->
  <!-- These properties control TUnit source generation behavior -->
  
  <PropertyGroup>
    <!-- Maximum depth for generic type resolution (default: 5) -->
    <TUnitGenericDepthLimit>5</TUnitGenericDepthLimit>
    
    <!-- Enable AOT-only mode (no reflection fallback) (default: false) -->
    <TUnitAotOnlyMode>true</TUnitAotOnlyMode>
    
    <!-- Enable property injection (default: true) -->
    <TUnitEnablePropertyInjection>true</TUnitEnablePropertyInjection>
    
    <!-- Enable ValueTask support in hooks (default: true) -->
    <TUnitEnableValueTaskHooks>true</TUnitEnableValueTaskHooks>
    
    <!-- Enable verbose diagnostics during source generation (default: false) -->
    <TUnitEnableVerboseDiagnostics>false</TUnitEnableVerboseDiagnostics>
    
    <!-- Maximum number of generic instantiations per type (default: 10) -->
    <TUnitMaxGenericInstantiations>10</TUnitMaxGenericInstantiations>
    
    <!-- Enable automatic generic type discovery (default: true) -->
    <TUnitEnableAutoGenericDiscovery>true</TUnitEnableAutoGenericDiscovery>
  </PropertyGroup>
</Project>