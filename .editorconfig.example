# Example .editorconfig with TUnit configuration options
# This file shows how to configure TUnit source generation behavior

root = true

[*.cs]
# TUnit Source Generation Configuration

# Maximum depth for generic type resolution (default: 5)
tunit.generic_depth_limit = 5

# Enable AOT-only mode (no reflection fallback) (default: false)
tunit.aot_only_mode = true

# Enable property injection (default: true)
tunit.enable_property_injection = true

# Enable ValueTask support in hooks (default: true)
tunit.enable_valuetask_hooks = true

# Enable verbose diagnostics during source generation (default: false)
tunit.enable_verbose_diagnostics = false

# Maximum number of generic instantiations per type (default: 10)
tunit.max_generic_instantiations = 10

# Enable automatic generic type discovery (default: true)
tunit.enable_auto_generic_discovery = true