<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net8.0</TargetFrameworks>
    <EnableTrimAnalyzer Condition="'$(TargetFramework)' == 'netstandard2.0'">false</EnableTrimAnalyzer>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="TUnit.Core.props">
      <Pack>true</Pack>
      <PackagePath>buildTransitive/$(TargetFramework)/</PackagePath>
    </Content>
    <Content Include="TUnit.Core.targets">
      <Pack>true</Pack>
      <PackagePath>buildTransitive/$(TargetFramework)/</PackagePath>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="PolySharp">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>

    <None Include="$(OutputPath)/TUnit.Analyzers.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>
</Project>