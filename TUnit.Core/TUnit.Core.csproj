<Project Sdk="Microsoft.NET.Sdk">
    
    <PropertyGroup>
      <LangVersion>preview</LangVersion>
    </PropertyGroup>
    
    <ItemGroup>
        <Content Include="TUnit.Core.props">
            <Pack>true</Pack>
            <PackagePath>buildTransitive/$(TargetFramework)/</PackagePath>
