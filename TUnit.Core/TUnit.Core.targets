<?xml version="1.0" encoding="utf-8"?>
<Project>

    <ItemGroup Condition="'$(TUnitImplicitUsings)' == 'true'">
        <Using Include="TUnit.Core.HookType" Static="True" />
        <Using Include="TUnit.Core" />
    </ItemGroup>

    <ItemGroup
        Condition="'$(EnableTUnitPolyfills)' != 'false' and '$(TargetFramework)' == 'netstandard2.0'">
        <PackageReference Include="Polyfill"
            VersionOverride="8.7.3"
            Version="8.7.3">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

</Project>
