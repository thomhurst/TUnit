<Project Sdk="Microsoft.NET.Sdk">

    <!-- Import TUnit props when using TUnit framework -->
    <Import Project="..\..\..\TUnit.Engine\TUnit.Engine.props" Condition="'$(TestFramework)' == 'TUNIT'" />

    <PropertyGroup Condition="'$(TestFramework)' == ''">
        <TestFramework>TUNIT</TestFramework>
    </PropertyGroup>

    <!-- Define constants based on TestFramework property -->
    <PropertyGroup>
        <DefineConstants Condition="'$(TestFramework)' == 'TUNIT'">$(DefineConstants);TUNIT</DefineConstants>
        <DefineConstants Condition="'$(TestFramework)' == 'XUNIT3'">$(DefineConstants);XUNIT3</DefineConstants>
        <DefineConstants Condition="'$(TestFramework)' == 'NUNIT'">$(DefineConstants);NUNIT</DefineConstants>
        <DefineConstants Condition="'$(TestFramework)' == 'MSTEST'">$(DefineConstants);MSTEST</DefineConstants>
    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>false</IsPackable>
        <IsTestProject>true</IsTestProject>
        <LangVersion>14</LangVersion>
        <UseMicrosoftTestingPlatformRunner>true</UseMicrosoftTestingPlatformRunner>
        <EnableMSTestRunner>true</EnableMSTestRunner>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <EnableNUnitRunner>true</EnableNUnitRunner>
        <TestingPlatformDotnetTestSupport>true</TestingPlatformDotnetTestSupport>
        <OutputType>Exe</OutputType>
    </PropertyGroup>

    <!--Custom output paths based on TestFramework -->
    <PropertyGroup Condition="'$(TestFramework)' != ''">
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    </PropertyGroup>

    <PropertyGroup Condition="'$(TestFramework)' != ''">
        <OutputPath>bin\$(Configuration)-$(TestFramework)\$(TargetFramework)\</OutputPath>
        <IntermediateOutputPath>obj\$(Configuration)-$(TestFramework)\$(TargetFramework)\</IntermediateOutputPath>
    </PropertyGroup>

    <!-- TUnit packages - use direct references to avoid telemetry/code coverage overhead in benchmarks -->
    <ItemGroup Condition="'$(TestFramework)' == 'TUNIT'">
        <ProjectReference Include="..\..\..\TUnit.Engine\TUnit.Engine.csproj" />
        <ProjectReference Include="..\..\..\TUnit.Assertions\TUnit.Assertions.csproj" />
        <ProjectReference Include="..\..\..\TUnit.Core.SourceGenerator\TUnit.Core.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <PackageReference Include="Microsoft.Testing.Platform.MSBuild" />
    </ItemGroup>

    <!-- xUnit v3 packages -->
    <ItemGroup Condition="'$(TestFramework)' == 'XUNIT3'">
        <PackageReference Include="xunit.v3" />
        <PackageReference Include="xunit.runner.visualstudio">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
    </ItemGroup>

    <!-- NUnit packages -->
    <ItemGroup Condition="'$(TestFramework)' == 'NUNIT'">
        <PackageReference Include="NUnit" />
        <PackageReference Include="NUnit3TestAdapter" />
    </ItemGroup>

    <!-- MSTest packages -->
    <ItemGroup Condition="'$(TestFramework)' == 'MSTEST'">
        <PackageReference Include="MSTest" />
    </ItemGroup>

    <!-- AOT and SingleFile configurations for TUnit -->
    <PropertyGroup Condition="'$(TestFramework)' == 'TUNIT' AND '$(Aot)' == 'true'">
        <PublishAot>true</PublishAot>
        <PublishTrimmed>true</PublishTrimmed>
    </PropertyGroup>

    <PropertyGroup Condition="'$(TestFramework)' == 'TUNIT' AND '$(SingleFile)' == 'true'">
        <PublishSingleFile>true</PublishSingleFile>
        <SelfContained>true</SelfContained>
    </PropertyGroup>

</Project>
