<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\TestProject.props" />

  <PropertyGroup Condition="'$(Aot)' == 'true' and $([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">
    <IsAotCompatible>true</IsAotCompatible>
    <PublishAot>true</PublishAot>
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\TUnit.Mock\TUnit.Mock.csproj" />

    <!-- Wire source generator for mock generation in test code -->
    <ProjectReference Include="..\TUnit.Mock.SourceGenerator\TUnit.Mock.SourceGenerator.csproj"
                      OutputItemType="Analyzer" ReferenceOutputAssembly="false" />

    <!-- Wire analyzer for compile-time diagnostics -->
    <ProjectReference Include="..\TUnit.Mock.Analyzers\TUnit.Mock.Analyzers.csproj"
                      OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <Import Project="..\TUnit.Mock\TUnit.Mock.props" />
  <Import Project="..\TUnit.Mock\TUnit.Mock.targets" />
  <Import Project="..\TestProject.targets" />

</Project>
