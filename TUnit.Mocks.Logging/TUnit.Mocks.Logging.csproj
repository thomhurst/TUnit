<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\Library.props" />

    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
        <Description>ILogger verification helpers for TUnit.Mocks. Enables fluent verification of log calls without dealing with the complex Log&lt;TState&gt;() signature.</Description>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\TUnit.Mocks\TUnit.Mocks.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.3" VersionOverride="8.0.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.3" VersionOverride="9.0.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    </ItemGroup>

    <Import Project="..\Library.targets" />

</Project>
