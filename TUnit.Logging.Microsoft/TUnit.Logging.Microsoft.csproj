<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\Library.props" />

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="TUnit.AspNetCore" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TUnit.Core\TUnit.Core.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.Extensions.Logging" Version="10.0.3" VersionOverride="8.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
    <PackageReference Include="Microsoft.Extensions.Logging" Version="10.0.3" VersionOverride="9.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
    <PackageReference Include="Microsoft.Extensions.Logging" />
  </ItemGroup>

  <Import Project="..\Library.targets" />

</Project>
